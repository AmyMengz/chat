<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white"
    android:padding="@dimen/listview_pading"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/nearby_date_avatar"
        >
            <ImageView 
            android:id="@+id/avatar"
            android:layout_width="@dimen/nearby_date_avatar"
            android:layout_height="@dimen/nearby_date_avatar"
            android:src="@drawable/default_face"
            android:scaleType="fitXY"/>
        <LinearLayout 
            android:layout_marginLeft="@dimen/margin_gap"
            android:layout_toRightOf="@id/avatar"
            android:layout_alignTop="@id/avatar"
            android:layout_alignBottom="@id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/date_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="title"
                />
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView 
                android:id="@+id/user_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user_age"
                android:textColor="@color/white_text"
                android:gravity="right|bottom"
                android:paddingRight="@dimen/margin_gap"
                />
                 <TextView 
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_gap_bigger"
                    android:text="name"
                    android:gravity="bottom"/>
            </LinearLayout>
            
        </LinearLayout> 
            <ImageView 
            android:layout_alignParentRight="true"
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            />
    </RelativeLayout>
    <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView 
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="address"
                />
          
            <TextView 
                android:id="@+id/distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="distance"
                android:gravity="right"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView 
                android:id="@+id/partner_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="number"
                />
            <TextView 
                android:id="@+id/partner_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="type"
                />
            <TextView 
                android:id="@+id/fees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="fees"
                android:gravity="right"
                />
        </LinearLayout>
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView 
                android:id="@+id/date_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="date_time"
                />
            
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="right"
                >
            <TextView 
                android:id="@+id/date_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="apply"
                />
                <TextView 
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="comment"
                android:layout_marginLeft="@dimen/margin_gap"
                android:background="@drawable/button_message"
                android:textColor="@color/white_text"
                />
            </LinearLayout>
            
        </LinearLayout>
</LinearLayout>
	<ImageView 
	    android:id="@+id/has_apply"
   	 	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/apply"
    	android:layout_centerInParent="true"
    	android:visibility="gone"
    />
</RelativeLayout>
