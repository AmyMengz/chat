<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"> 
     <LinearLayout 
         android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_bottom_bar"
        android:background="@color/bottom_bar_normal_bg"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/apply_manage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/i_want_apply"
            android:background="@color/common_botton_bar_blue"
            android:textColor="@color/white_text"
            />
        <TextView
            android:visibility="gone" 
            android:id="@+id/comments"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/comments"
            android:textColor="@color/white_text"
            />
         <TextView 
             android:visibility="gone"
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/share"
            android:textColor="@color/white_text"
            />
          <TextView 
              android:visibility="gone"
            android:id="@+id/report"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/report"
            android:textColor="@color/white_text"
            />
    </LinearLayout>
    

<LinearLayout  
    android:layout_above="@id/bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />
    <com.huodong.im.chatdemo.view.UserDefineScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/listview_pading"
        >
        <!-- 头像 约会发起人基本信息 -->
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView 
            android:id="@+id/avatar"
            android:layout_width="@dimen/nearby_date_avatar"
            android:layout_height="@dimen/nearby_date_avatar"
           	android:src="@drawable/default_face"
           	android:scaleType="fitXY"
             />
       		 <LinearLayout
       		     android:layout_toRightOf="@id/avatar"
       		     android:layout_marginLeft="@dimen/margin_gap" 
            	android:layout_width="wrap_content"
            	android:layout_height="@dimen/nearby_date_avatar"
            	android:orientation="vertical"
            	>
       		     <TextView 
       		         android:id="@+id/date_title"
       		         android:layout_width="wrap_content"
       		         android:layout_height="0dp"
       		         android:layout_weight="1"
       		         android:text="title"
       		         />
       		     <LinearLayout 
       		         android:layout_width="wrap_content"
       		         android:layout_height="0dp"
       		         android:layout_weight="1"
       		         android:orientation="horizontal"
       		         >
       		         <TextView        		         
       		         android:id="@+id/sponsor_info"
       		         android:layout_width="wrap_content"
       		         android:layout_height="wrap_content"
       		         android:text="gender _20"
       		         android:gravity="right"
       		         android:paddingRight="@dimen/margin_gap"
       		         android:textColor="@color/white_text"
       		         android:background="@drawable/gender_gril"
       		         />
       		     <TextView
       		          android:layout_marginLeft="@dimen/margin_gap" 
       		         android:id="@+id/sponsor_nick"
       		         android:layout_width="wrap_content"
       		         android:layout_height="wrap_content"
       		         android:text="nick"
       		         />
       		     </LinearLayout>
       		     <LinearLayout 
       		         android:layout_width="wrap_content"
       		         android:layout_height="0dp"
       		         android:layout_weight="1"
       		         android:orientation="horizontal"
       		         android:gravity="bottom"
       		         >
       		     <!-- <ImageView /> -->
       		      <TextView        		         
       		         android:id="@+id/address"
       		         android:layout_width="wrap_content"
       		         android:layout_height="wrap_content"
       		         android:text="address"
       		         />
       		     <TextView
       		          android:layout_marginLeft="@dimen/margin_gap_bigger" 
       		         android:id="@+id/distance"
       		         android:layout_width="wrap_content"
       		         android:layout_height="wrap_content"
       		         android:text="distance"
       		         />
       		     </LinearLayout>
       		     
       		 </LinearLayout>
       		 <ImageView 
       		     android:layout_alignParentRight="true"
       		     android:id="@+id/logo"
       		     android:layout_width="wrap_content"
       		     android:layout_height="wrap_content"
       		     android:src="@drawable/logo"
       		     android:layout_gravity="right"
       		     />
        </RelativeLayout>
        <!-- 约会限制 -->
        <View 
            android:layout_marginTop="@dimen/margin_gap_bigger"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/default_blue_color"
            />
        <LinearLayout 
            android:layout_marginTop="@dimen/margin_gap_bigger"
            android:layout_marginBottom="@dimen/margin_gap_bigger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView 
                android:id="@+id/partner_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限1人"
                />
            <TextView android:id="@+id/partner_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_gap"
                android:text="(男女不限)"/>
            <TextView android:id="@+id/fees_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_gap"
                android:text="我请客你出钱"/>
            <TextView android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_gap"
                android:text="2016-03-16 20:00"/>
            
        </LinearLayout>
         <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/default_blue_color"
            />
         <!-- 约会详细地址 -->
         <LinearLayout 
             android:layout_marginTop="@dimen/margin_gap_bigger"
             android:layout_marginBottom="@dimen/margin_gap_bigger"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
             <ImageView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/location"
                 />
             <TextView 
                 android:gravity="bottom"
                 android:id="@+id/detail_address"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="福田区景田田径商务大厦"
                 android:textColor="@color/common_botton_bar_blue"
                 />
         </LinearLayout>
          <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/default_blue_color"
            />
          <!-- 约会说明 -->
           <LinearLayout 
             android:layout_marginTop="@dimen/margin_gap_bigger"
             android:layout_marginBottom="@dimen/margin_gap_bigger"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
             <TextView 
                 android:gravity="bottom"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/date_notes"
                 />
             <TextView 
                 android:gravity="bottom"
                 android:id="@+id/notes"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:hint="我是说明信息"
                 />
         </LinearLayout>
         <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/default_blue_color"
            />
         <!-- 约会发起人电话号码 及申请信息-->
         <LinearLayout 
             android:layout_marginTop="@dimen/margin_gap_bigger"
             android:layout_marginBottom="@dimen/margin_gap_bigger"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             >
             <LinearLayout 
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 >
                 <TextView 
                 android:gravity="bottom"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/phone_number"
                 />
             <TextView 
                 android:gravity="bottom"
                 android:id="@+id/phone_number"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:hint="@string/verify_tips"
                 />
             </LinearLayout>  
             <!-- 约会申请信息 -->
              <LinearLayout 
                  android:layout_marginTop="@dimen/margin_gap_bigger"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 >
                 <TextView 
                 android:id="@+id/verify_num"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/verify_num"
                 />
             <TextView 
                 android:id="@+id/apply_num"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/apply_num"
                 />
             <LinearLayout 
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="right"
                 >
                  <TextView 
                 android:id="@+id/comments_num"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="11"
                 android:gravity="right"
                 android:paddingRight="@dimen/margin_gap"
                 android:background="@drawable/button_message"
                 android:textColor="@color/white_text"
                 />
             </LinearLayout>
            
             </LinearLayout>            
         </LinearLayout>
         <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/default_blue_color"
            />
         <LinearLayout
             android:layout_marginTop="@dimen/margin_gap_bigger" 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/verify_ok_tips"/>
             <GridView 
                 android:id="@+id/allowed_user_gv"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:numColumns="4"
                 android:cacheColorHint="@color/transparent"
                 android:listSelector="@color/transparent"
                 android:scrollbars="none"
                 ></GridView>
             
         </LinearLayout>
          
        
    </LinearLayout>
    </com.huodong.im.chatdemo.view.UserDefineScrollView>
    
    </LinearLayout>
   

    
</RelativeLayout>
