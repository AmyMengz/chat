<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white"
    android:padding="@dimen/listview_pading"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/bussiness_info_avatar"
        >
        <ImageView 
            android:id="@+id/avatar"
            android:layout_width="@dimen/bussiness_info_avatar"
            android:layout_height="@dimen/bussiness_info_avatar"
            android:src="@drawable/default_face"/>
        <LinearLayout 
            android:layout_marginLeft="@dimen/margin_gap"
            android:layout_toRightOf="@id/avatar"
            android:layout_alignTop="@id/avatar"
            android:layout_alignBottom="@id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="name"
                />
            <LinearLayout 
                android:layout_width="match_parent"
               	android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <!-- <ImageView 
               		android:id="@+id/rating"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                /> -->
                <ImageView 
            		android:id="@+id/rating"
            		android:layout_width="100dp"
            		android:layout_height="20dp"
            		android:src="@drawable/default_face"
            		android:scaleType="centerInside"/>
                <TextView 
                    android:id="@+id/avg_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_gap"
                    android:text="avg_price"
                    />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                 <TextView 
                android:id="@+id/regions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="regions"
                />
                  <TextView 
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_gap_bigger"
                android:text="distance"
                />
            </LinearLayout>
           
           <!--  <TextView 
                android:id="@+id/discount_num"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="discount_num"
                /> -->
        </LinearLayout> 
            <ImageView 
            android:layout_alignParentRight="true"
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            />
    </RelativeLayout>
    <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            
            >
            <TextView 
                android:id="@+id/discount_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="discount_num"
                android:padding="@dimen/margin_gap"
                android:textColor="@color/red"
                />
            <TextView 
                android:id="@+id/btn_select"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_go"
                android:gravity="center"
                android:textColor="@color/white_text"
                android:padding="@dimen/margin_gap"
                android:background="@drawable/btn_blue"
                />
            
        </LinearLayout>
    

</LinearLayout>
