<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_dark"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_backgrout_seletor2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/iv_expression"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/smile_33475f_100"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_selector"
            android:cursorVisible="true"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:background="@drawable/tv_click_seletor"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/send"
                android:textColor="#000"
                android:textSize="16sp" />

            <FrameLayout
                android:id="@+id/fl_progress"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/tv_click_seletor"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/iv_progress"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:src="@drawable/roading" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/gv_expression"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@android:color/white"
        android:numColumns="6"
        android:visibility="gone" >
    </GridView>

</LinearLayout>