<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#08555555"
        android:orientation="vertical">
         <LinearLayout 
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="验证码短信发送到："/>
        <TextView 
            android:id="@+id/tv_showphonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+132565646465"
            android:layout_marginLeft="20dp"
            android:textColor="#000088"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_register_auth_code_selector"
            android:layout_marginLeft="10dp"/>
        <EditText 
            android:layout_marginLeft="10dp"
            android:id="@+id/et_receivedcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical"
            android:hint="请输入手机短信收到的验证码"/>
    </LinearLayout>
    <Button 
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/register_buttonstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="重发验证码"/>
    </LinearLayout>
   
    

</LinearLayout>
